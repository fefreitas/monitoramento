@model Monitoramento.Models.Conta

@{
    ViewBag.Title = "Monitor";
}


<div class="jumbotron">
    <h1>@ViewBag.Titulo</h1>

    <div class="row">
        <div class="col-md-6">
            Números Pares:
            <hr />
            @{
                if(Model != null && Model.ListaNumPar.Count > 0)
                {
                        <ul class="">
                            @{ foreach (var item in Model.ListaNumPar)
                                {
                                    <li class="">@item</li>
                                }
                            }
                        </ul>
                }
            }
        </div>
        <div class="col-md-6">
            Números Ímpares:
            <hr />
            @{
                if (Model != null && Model.ListaNumImpar.Count > 0)
                {
                    <ul class="">
                        @{ foreach (var item in Model.ListaNumImpar)
                            {
                                <li class="">@item</li>
                            }
                        }
                    </ul>
                }
            }
        </div>
    </div>
</div>